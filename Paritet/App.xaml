<Application x:Class="Paritet.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Paritet" 
             xmlns:converters="clr-namespace:Paritet.Converter"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Colors.xaml"/>
                <ResourceDictionary Source="Style/Buttons.xaml"/>
                <ResourceDictionary Source="Style/Inputs.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:CreateConverter x:Key="createConverter"/>
            <converters:DateTimeConverter x:Key="dateTimeConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
